<Page x:Class="XHair.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <Label Name="settingsLabel" Content="Settings" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,20" />
            <Button Name="userPath" Content="Custom folder" Margin="0,0,0,5" FontSize="15" Click="UserPath_Click"></Button>
            <Label Name="userPathLabel" Content="" HorizontalAlignment="Center" FontSize="15" Margin="0,0,0,5" />

        </StackPanel>
    </Grid>
</Page>